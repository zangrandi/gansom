            </ul>

            <ul class="nav navbar-nav navbar-right top">
              <li class=""><a href="/pages/contact" class="">Contato</a></li>
              <li class=""><a href="/account#orders" class="">Acompanhar Pedido</a></li>
              <% if spree_current_user %>
                <li><%= link_to Spree.t(:my_account), spree.account_path %></li>
                <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
              <% else %>
                <li><%= link_to Spree.t(:login), spree.login_path %></li>
                <li><%= link_to Spree.t(:signup), spree_signup_path %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!-- row -->
      </div>  <!-- container -->
    </div><!-- navbar static top -->

    <div role="navigation" class="navbar-main navbar-default navbar-static-top" id='main-nav'>
      <div class="container">

        <div class="navbar-header hidden-sm">
          <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target=".navbar-ex1-collapse">
