    <%= render :partial => 'spree/shared/shipping_bar' %>

    <div class="well well-sm no-margin support-bar-well visible-xs" style="padding-left: 0; padding-right:0px;">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class='pull-left'>
              <strong><i class="fa fa-whatsapp"></i> </strong>(21) 99437-2128
            </div><!-- pull-left -->
          </div>
        </div>
      </div>
    </div><!-- support-bar-well -->

    <div role="navigation" class="navbar navbar-default no-margin sm-navbar navbar-square hidden-xs" id='sub-nav'>        
      <div class="container">
        <div class='row'>
          <div class="navbar-top-collapse navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left top">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><strong><i class="fa fa-whatsapp"></i> </strong><span>(21) 99437-2128</span></a>
