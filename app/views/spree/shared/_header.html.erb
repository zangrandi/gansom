          <div class="visible-xs">
            <% unless current_page?(spree.cart_path) %>
              <div id="link-to-cart-xs" class="pull-right" data-hook>
                <noscript>
                  <%= link_to Spree.t(:cart), '/cart' %>
                </noscript>
                <script>Spree.fetch_cart_xs()</script>
              </div>
            <% end %>
          </div>

        </div><!-- navbar header -->

        <div class="navbar-header col-sm-12 visible-sm">
          <a class="navbar-brand col-sm-12 text-center" href="/"><%= image_tag('logo.jpg') %></a>
        </div><!-- navbar header -->

        <div class="collapse navbar-collapse navbar-ex1-collapse ">
          <ul class="nav navbar-nav navbar-bottom">
            <li class="">
              <div>
                <a class='btn btn-primary navbar-btn' href="/products" title="Wheels">
                  Comprar
                </a>
              </div>
            </li>
            <li class="visible-xs"><a href="/pages/contact" class="">Contato</a></li>
            <li class="">
